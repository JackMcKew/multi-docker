{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [{
            "name": "client",
            "image": "jackmckew/multi-docker-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "jackmckew/multi-docker-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "jackmckew/multi-docker-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "jackmckew/multi-docker-nginx",
            "essential": true,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": [
                "client", "server"
            ]
        }
    ]
}